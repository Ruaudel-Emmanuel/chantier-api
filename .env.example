# ============================================================================
# .env.example - Variables d'environnement (À RENOMMER en .env et configurer)
# ============================================================================
# IMPORTANT : Ne pas commiter le fichier .env avec les vrais secrets !

# ============================================================================
# DJANGO
# ============================================================================
DEBUG=True
SECRET_KEY=your-super-secret-key-change-this-in-production-12345678901234
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0
DJANGO_SETTINGS_MODULE=config.settings
DJANGO_LOG_LEVEL=INFO

# ============================================================================
# BASE DE DONNÉES
# ============================================================================
# SQLite (développement)
DB_ENGINE=sqlite3
DB_NAME=db.sqlite3

# PostgreSQL (production recommandé - Décommenter et remplir)
# DB_ENGINE=postgresql
# DB_NAME=chantiers_db
# DB_USER=chantiers_user
# DB_PASSWORD=your-postgres-password
# DB_HOST=localhost
# DB_PORT=5432

# ============================================================================
# CORS - Pour l'API mobile
# ============================================================================
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000,http://127.0.0.1:3000,http://127.0.0.1:8000

# ============================================================================
# STOCKAGE DE FICHIERS
# ============================================================================
USE_S3=False

# AWS S3 (si USE_S3=True)
# AWS_ACCESS_KEY_ID=your-aws-access-key
# AWS_SECRET_ACCESS_KEY=your-aws-secret-key
# AWS_STORAGE_BUCKET_NAME=my-chantiers-bucket
# AWS_S3_REGION_NAME=eu-west-1

# ============================================================================
# AUTHENTIFICATION
# ============================================================================
# Token API (généré via Django admin ou par la CLI)
# INTERNAL_API_TOKEN=votre-token-secret

# JWT (optionnel)
# JWT_SECRET=your-jwt-secret-key
# JWT_ALGORITHM=HS256

# ============================================================================
# EMAIL (pour notifications)
# ============================================================================
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend
# EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_USE_TLS=True
# EMAIL_HOST_USER=your-email@example.com
# EMAIL_HOST_PASSWORD=your-app-password
# DEFAULT_FROM_EMAIL=noreply@chantiers-api.com

# ============================================================================
# CONFIGURATION MÉTIER
# ============================================================================
AUTO_GEOCODING=False
MAX_PHOTO_SIZE_MB=5
MAX_PHOTOS_PER_TACHE=50

# ============================================================================
# LOGGING
# ============================================================================
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# ============================================================================
# CACHE
# ============================================================================
CACHE_BACKEND=locmem
# CACHE_BACKEND=redis
# REDIS_URL=redis://localhost:6379/0

# ============================================================================
# PRODUCTION (Héroku, Railway, DigitalOcean, etc.)
# ============================================================================
# DATABASE_URL=postgresql://user:password@host:port/dbname
# ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com
# SECURE_SSL_REDIRECT=True
# SESSION_COOKIE_SECURE=True
# CSRF_COOKIE_SECURE=True
